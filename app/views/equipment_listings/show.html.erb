<div class="d-flex align-items-center justify-content-between mb-3 pt-5">
  <div class="text-decoration-none">
    <%= link_to "Back", root_path, class: "btn-pink" %>
  </div>
</div>

<div class="container mb-6">
  <% if  @equipment_listing.nil? == false %>
    <div class="d-flex flex-column">
      <div>
        <div class="d-flex flex-fill">
        <!-- IMAGE FROM cloudinary LATER -->
          <% if @equipment_listing.photo.key.nil? %>
            <%= "No Image available yet" %>
          <% else %>
         <%= cl_image_tag @equipment_listing.photo.key, height: 500, width: 1270, crop: :fill %>
          <% end %>
        </div>
      </div>
      <div class="d-flex">
        <div class="flex-fill">
          <div class="card-title p-3">
            <h2><%= @equipment_listing.name %></h2>
          </div>
          <div class="card-subtitle mb-2 status">
            <p><%= @equipment_listing.description %></p>
          </div>
        </div>
     <%= render "bookings/form", booking: @booking %>
      </div>
    </div>
    <div class="map-container">

      <div style="width: 100%; height: 600px; border-radius: 8px; box-shadow: 0 0.5rem 1rem rgb(0 0 0 / 15%) !important"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

    <% else %>
      No item found for ID <%= @equipment_listing_id %>
  <% end %>
</div>
